<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Today's Stats</h4>
                    <h6 class="card-subtitle mb-2 text-muted">This status bar will give you a good sense of how your BJR server and workers are performing. The background color will indicate whether the stat is healthy or not.</h6>
                    <%= react_component('StatusBar', { subtitles: @today_stats_subtitles, tooltips: @today_stats_tooltips }) %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="minute-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="hour-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="day-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="week-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="minute-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="hour-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="day-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="week-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <%= react_component('BJRJobDataTable', { title: t('.recent_title'), full: false, source: '/recent_jobs', pagination: false }) %>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <%= react_component('BJRJobDataTable', { title: t('.upcoming_title'), full: false, source: '/upcoming_jobs', pagination: false }) %>
                </div>
            </div>
        </div>
    </div>
</div>
