<div class="container-fluid">
    <%= react_component('StatusBar', { subtitles: [t('.jobs_enabled'), t('.jobs_ran_today'), t('.jobs_failed_today'), t('.average_runtime_today')] }) %>
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="minute-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="hour-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="day-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="week-stats" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="minute-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="hour-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="day-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <canvas id="week-runs" width="250" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <%= react_component('BJRJobDataTable', { title: t('.recent_title'), full: false, source: '/recent_jobs', pagination: false }) %>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <%= react_component('BJRJobDataTable', { title: t('.upcoming_title'), full: false, source: '/upcoming_jobs', pagination: false }) %>
                </div>
            </div>
        </div>
    </div>
</div>
