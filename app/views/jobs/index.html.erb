<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="float-left">
            <%= react_component('CreateJobButton', { timezone: Time.zone.tzinfo.name }) %>
          </div>
          <div class="float-right">
            <%= react_component('FilterComponent', { expression: @expression }) %>
          </div>
          <%= react_component('BJRJobDataTable', { title: t('.title'), full: true, source: '/job_list', pagination: true, folder_selected: !@folder_id.nil? }) %>
        </div>
      </div>
    </div>
  </div>
</div>
