<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">All System Jobs</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th><%= t('.name') %></th>
                                    <th><%= t('.cron') %></th>
                                    <th><%= t('.command') %></th>
                                    <th><%= t('.timezone') %></th>
                                    <th><%= t('.enabled') %></th>
                                    <th><%= t('.running') %></th>
                                    <th><%= t('.succeeded') %></th>
                                    <th><%= t('.last_run') %></th>
                                    <th><%= t('.next_run') %></th>
                                    <th><%= t('.created_at') %></th>
                                    <th><%= t('.updated_at') %></th>
                                    <th><%= t('.success_callback') %></th>
                                    <th><%= t('.failure_callback') %></th>
                                    <th>Tags</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @jobs.each do |job| %>
                                <tr>
                                    <td><%= job.name %></td>
                                    <td><%= job.cron %></td>
                                    <td><%= job.command %></td>
                                    <td><%= job.timezone %></td>
                                    <td><%= job.enabled %></td>
                                    <td><%= job.running %></td>
                                    <td><%= job.success %></td>
                                    <td><%= user_tz(job.last_run) %></td>
                                    <td><%= user_tz(job.next_run) %></td>
                                    <td><%= user_tz(job.created_at) %></td>
                                    <td><%= user_tz(job.updated_at) %></td>
                                    <td><%= job.success_callback %></td>
                                    <td><%= job.failure_callback %></td>
                                    <td><%= job.tags.join(',') %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <%== render partial: 'paginate', locals: {pagy: @pagy} %>
                </div>
            </div>
        </div>
    </div>
</div>
