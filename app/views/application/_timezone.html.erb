<div class="form-row align-items-center">
  <div class="col-auto my-1">
    <label class="mr-sm-2"><%= t('common.timezone') %></label>
    <select class="custom-select mr-sm-2" id="timezone">
      <% @timezones.each do |tz| %>
        <option value="<%= tz %>"><%= tz %></option>
      <% end %>
    </select>
  </div>
</div>
